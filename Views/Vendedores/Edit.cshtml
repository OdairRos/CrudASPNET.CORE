
@model CrudASPNET.CORE.Models.FormularioVendedorViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["title"]</h2>


<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit">
            <input type="hidden" asp-for="vendedor.Id" />
            <fieldset class="modal-title">Vendedor</fieldset>
            <div class="form-group">
                <label asp-for="vendedor.Name" class="control-label"></label>
                <input asp-for="vendedor.Name" class="form-control" />
                <span asp-validation-for="vendedor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.Email" class="control-label"></label>
                <input asp-for="vendedor.Email" class="form-control" />
                <span asp-validation-for="vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.BirthDate" class="control-label"></label>
                <input asp-for="vendedor.BirthDate" class="form-control" />
                <span asp-validation-for="vendedor.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.BaseSalary" class="control-label"></label>
                <input asp-for="vendedor.BaseSalary" class="form-control" />
                <span asp-validation-for="vendedor.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.DepartmentId" class="control-label"></label>
                <select asp-for="vendedor.DepartmentId" asp-items="@(new SelectList(Model.departamentos, "Id", "Nome"))" class="form-control"></select>
                <span asp-validation-for="vendedor.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}